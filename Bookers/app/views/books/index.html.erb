<h3>Books</h3>
<p id="notice">
 <%=  notice %>
</p>
<table>
    <thead>
        <tr>
            <th>itle</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", update_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li>error</li>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

    <%= f.label :Title %><br/>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %></br>

<% end %>